<?xml version="1.0" encoding="UTF-8"?>

<!-- to do annotation based configuration, you have to use those lines -->
<!-- 1. xmlns:context="http://www.springframework.org/schema/context" -->
<!-- 2. http://www.springframework.org/schema/context  -->
<!-- 3. http://www.springframework.org/schema/context/spring-context-4.0.xsd-->

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
   http://www.springframework.org/schema/context 
   http://www.springframework.org/schema/context/spring-context-4.0.xsd">
   
<context:component-scan base-package="com.pameni.AnnotationConfiguration"></context:component-scan>
	
</beans>
